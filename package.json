{
  "name": "merox-erudite",
  "type": "module",
  "version": "1.0.0",
  "description": "An enhanced version of astro-erudite with newsletter integration, Disqus comments, analytics support, and additional features",
  "author": "merox",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/meroxdotdev/merox-erudite.git"
  },
  "keywords": [
    "astro",
    "astro-theme",
    "blog",
    "blogging",
    "mdx",
    "tailwind",
    "shadcn-ui"
  ],
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prettier": "prettier --write **/*.{ts,tsx,css,astro} --ignore-path .gitignore",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.5",
    "@astrojs/markdown-remark": "^6.3.8",
    "@astrojs/mdx": "^4.3.10",
    "@astrojs/react": "^4.4.2",
    "@astrojs/rss": "^4.0.13",
    "@astrojs/sitemap": "^3.6.0",
    "@expressive-code/plugin-collapsible-sections": "^0.41.3",
    "@expressive-code/plugin-line-numbers": "^0.41.3",
    "@iconify-json/lucide": "^1.2.73",
    "@iconify-json/simple-icons": "^1.2.59",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@tailwindcss/vite": "^4.1.17",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "astro": "^5.7.13",
    "astro-expressive-code": "^0.41.3",
    "astro-icon": "^1.1.5",
    "astro-og-canvas": "^0.7.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "flexsearch": "^0.8.212",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.554.0",
    "patch-package": "^8.0.0",
    "radix-ui": "^1.4.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "rehype-external-links": "^3.0.0",
    "rehype-katex": "^7.0.1",
    "rehype-pretty-code": "^0.14.1",
    "remark-emoji": "^5.0.2",
    "remark-math": "^6.0.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-astro-organize-imports": "^0.4.11",
    "prettier-plugin-tailwindcss": "^0.7.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-astro",
      "prettier-plugin-tailwindcss",
      "prettier-plugin-astro-organize-imports"
    ],
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ]
  }
}

