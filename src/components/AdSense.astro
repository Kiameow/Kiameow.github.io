<div class="my-8">
  <script
    is:inline
    async
    src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2989869646477878"
    crossorigin="anonymous"
  ></script>
  <ins
    class="adsbygoogle"
    style="display:block; text-align:center;"
    data-ad-layout="in-article"
    data-ad-format="fluid"
    data-ad-client="ca-pub-2989869646477878"
    data-ad-slot="9164236271"
  ></ins>
  <script is:inline>
    (window.adsbygoogle = window.adsbygoogle || []).push({});
  </script>
</div>

<script>
  // Re-initialize ads on client-side navigation
  function reinitAdSense() {
    const ads = document.querySelectorAll('.adsbygoogle:not([data-adsbygoogle-status])');
    if (ads.length > 0) {
      window.adsbygoogle = window.adsbygoogle || [];
      ads.forEach(() => {
        try {
          if (window.adsbygoogle) {
            window.adsbygoogle.push({});
          }
        } catch (e) {
          console.error('AdSense error:', e);
        }
      });
    }
  }

  document.addEventListener('astro:page-load', () => {
    setTimeout(reinitAdSense, 100);
  });

  document.addEventListener('astro:after-swap', () => {
    setTimeout(reinitAdSense, 100);
  });
</script>
