---
// Reusable FAQ Schema component for voice search optimization
// Usage: <FAQSchema questions={[{ question: "...", answer: "..." }]} />

interface FAQItem {
  question: string
  answer: string
}

interface Props {
  questions: FAQItem[]
}

const { questions } = Astro.props

if (!questions || questions.length === 0) {
  return null
}

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": questions.map((item) => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer
    }
  }))
}
---

<script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

