---
import { SOCIAL_LINKS, NAV_LINKS, SITE } from '@/consts'
import SocialIcons from './SocialIcons.astro'
import Link from '@/components/Link.astro'
import Newsletter from './react/Newsletter'
import { ErrorBoundary } from './react/ErrorBoundary'
import { Icon } from 'astro-icon/components'

const isExternalLink = (href: string) => {
  return href.startsWith('http')
}
---

<footer class="bg-background/80 border-t border-border/50 backdrop-blur-md">
  <div class="w-full px-4 py-8 sm:py-10">
    <div class="flex flex-col gap-8 max-w-3xl mx-auto">
      <!-- Newsletter Section -->
      <div class="grid md:grid-cols-[1fr_auto] gap-6 py-6 md:py-8 items-center">
        <div class="text-left">
          <div class="flex items-center gap-2 mb-3">
            <Icon name="lucide:mail" class="size-5 text-primary shrink-0" />
            <h3 class="text-lg font-semibold text-foreground">Stay Updated</h3>
          </div>
          <p class="text-sm text-muted-foreground leading-relaxed">
            Get the latest posts delivered to your inbox.
          </p>
        </div>
        <div class="w-full md:w-auto md:flex-shrink-0">
          <ErrorBoundary client:load>
            <Newsletter client:load />
          </ErrorBoundary>
        </div>
      </div>

      <!-- Subtle Separator -->
      <div class="h-px bg-border/30" aria-hidden="true"></div>

      <!-- Main Footer Content -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        <!-- Navigation -->
        <div>
          <h4 class="text-sm font-semibold mb-3 text-foreground">Navigation</h4>
          <nav class="flex flex-col gap-2">
            {NAV_LINKS.map((item) => {
              const isExternal = isExternalLink(item.href)
              const isInsideLink = item.label.toLowerCase() === 'inside'
              return (
                <Link 
                  href={item.href} 
                  class={isInsideLink 
                    ? "text-sm text-primary hover:text-primary/80 capitalize transition-colors flex items-center gap-1.5 group font-medium" 
                    : "text-sm text-muted-foreground hover:text-primary capitalize transition-colors flex items-center gap-1.5 group"}
                >
                  <span>{item.label}</span>
                  {isExternal && (
                    <Icon 
                      name="lucide:external-link" 
                      class={isInsideLink 
                        ? "size-3 opacity-80 flex-shrink-0 text-primary group-hover:opacity-100 transition-opacity" 
                        : "size-3 opacity-70 flex-shrink-0 group-hover:opacity-100 group-hover:text-primary transition-colors"} 
                      aria-hidden="true"
                    />
                  )}
                </Link>
              )
            })}
          </nav>
        </div>

        <!-- Legal -->
        <div>
          <h4 class="text-sm font-semibold mb-3 text-foreground">Legal</h4>
          <nav class="flex flex-col gap-2">
            <Link href="/privacy" class="text-sm text-muted-foreground hover:text-primary transition-colors">
              Privacy Policy
            </Link>
            <Link href="/terms" class="text-sm text-muted-foreground hover:text-primary transition-colors">
              Terms of Service
            </Link>
          </nav>
        </div>

        <!-- Connect -->
        <div>
          <h4 class="text-sm font-semibold mb-3 text-foreground">Connect</h4>
          <SocialIcons links={SOCIAL_LINKS} />
        </div>
      </div>

      <!-- Separator -->
      <div class="h-px bg-border/60" aria-hidden="true"></div>

      <!-- Bottom Section -->
      <div class="flex flex-col items-center gap-2 sm:flex-row sm:justify-between text-sm text-muted-foreground">
        <div class="text-center sm:text-left">
          &copy; {new Date().getFullYear()} {SITE.title}. All rights reserved.
        </div>
        <div class="text-xs text-muted-foreground/80">
          <span>
            Theme: <a href="https://github.com/meroxdotdev/merox-erudite" target="_blank" rel="noopener noreferrer" class="underline hover:text-foreground transition-colors">merox-erudite</a>
          </span>
        </div>
      </div>
    </div>
  </div>
</footer>
