---
import { SITE, ANALYTICS, UMAMI } from '@/consts'
import { ClientRouter } from 'astro:transitions'
import Favicons from './Favicons.astro'

interface Props {
  title?: string
  description?: string
  image?: string
}

const { 
  title = SITE.title, 
  description = SITE.description,
  image
} = Astro.props

const canonicalURL = new URL(Astro.url.pathname, Astro.site).href
const cleanPathname = Astro.url.pathname.replace(/\/$/, '')
const ogImage = image || (cleanPathname ? new URL(`/og${cleanPathname}.png`, Astro.site).href : new URL('/og-default.png', Astro.site).href)
---

<head>
  <script is:inline>
    (function () {
      const theme =
        localStorage.getItem('theme') ||
        (window.matchMedia('(prefers-color-scheme: dark)').matches
          ? 'dark'
          : 'light')
      document.documentElement.setAttribute('data-theme', theme)
    })()
  </script>

  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1.0, user-scalable=yes"
  />
  <meta name="generator" content={Astro.generator} />

  <!-- Primary Meta Tags (deduplicated) -->
  <meta name="title" content={title} />
  {(() => {
    const desc = description && description.length > 160 ? `${description.slice(0, 157)}…` : description
    return <meta name="description" content={desc} />
  })()}
  <link rel="canonical" href={canonicalURL} />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  {(() => {
    const desc = description && description.length > 160 ? `${description.slice(0, 157)}…` : description
    return <meta property="og:description" content={desc} />
  })()}
  <meta property="og:image" content={ogImage} />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:url" content={canonicalURL} />
  <meta name="twitter:title" content={title} />
  {(() => {
    const desc = description && description.length > 160 ? `${description.slice(0, 157)}…` : description
    return <meta name="twitter:description" content={desc} />
  })()}
  <meta name="twitter:image" content={ogImage} />

  <meta name="HandheldFriendly" content="True" />
  <meta name="mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="default" />
  <meta
    name="format-detection"
    content="telephone=no,date=no,address=no,email=no,url=no"
  />

  <meta
    name="theme-color"
    content="#2563eb"
    media="(prefers-color-scheme: dark)"
  />
  <meta
    name="theme-color"
    content="#2563eb"
    media="(prefers-color-scheme: light)"
  />

  <link rel="sitemap" href="/sitemap-index.xml" />
  <link rel="manifest" href="/site.webmanifest" />
  <link
    rel="alternate"
    type="application/rss+xml"
    title={SITE.title}
    href={new URL('rss.xml', Astro.site)}
  />

  <Favicons />
  
  <!-- Font Preloading to prevent layout shifts -->
  <link rel="preload" href="/fonts/GeistVF.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
  <link rel="preload" href="/fonts/GeistMonoVF.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
  
  <!-- Resource Hints for Performance -->
  {ANALYTICS.google && (
    <>
      <link rel="dns-prefetch" href="https://www.googletagmanager.com" />
      <link rel="preconnect" href="https://www.googletagmanager.com" crossorigin />
    </>
  )}
  {UMAMI.websiteId && (
    <>
      <link rel="dns-prefetch" href="https://cloud.umami.is" />
      <link rel="preconnect" href="https://cloud.umami.is" crossorigin />
    </>
  )}
  <!-- Prefetch search index for faster search -->
  <link rel="prefetch" href="/api/search-index.json" as="fetch" crossorigin="anonymous" />
  
  <!-- Google Analytics -->
  {ANALYTICS.google && (
    <>
      <script is:inline define:vars={{ gaId: ANALYTICS.google }}>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', gaId);
      </script>
      <script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${ANALYTICS.google}`}></script>
    </>
  )}
  
  <ClientRouter />
  <!-- Umami Analytics -->
  {UMAMI.websiteId && (
    <script is:inline defer src="https://cloud.umami.is/script.js" define:vars={{ websiteId: UMAMI.websiteId }} data-website-id={UMAMI.websiteId}></script>
  )}

  <slot />
</head>