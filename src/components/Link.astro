---
// src/components/Link.astro
import { cn } from '@/lib/utils'

interface Props {
  href: string
  external?: boolean
  class?: string
  underline?: boolean
  'aria-label'?: string
  'data-testid'?: string
  'data-astro-reload'?: boolean
  target?: '_blank' | '_self' | '_parent' | '_top'
  rel?: string
  // Allow standard HTML anchor attributes
  id?: string
  title?: string
  download?: string
  hreflang?: string
  type?: string
}

const { href, external, class: className, underline, ...rest } = Astro.props

const isExternal = external || href.startsWith('http')
---

<a
  href={href}
  target={isExternal ? '_blank' : '_self'}
  rel={isExternal ? 'noopener noreferrer' : undefined}
  class={cn(
    'inline-block transition-colors duration-300 ease-in-out',
    underline &&
      'underline decoration-muted-foreground underline-offset-[3px] hover:decoration-foreground',
    className
  )}
  {...rest}
  data-internal-link={!isExternal ? 'true' : undefined}
  data-astro-reload={Astro.props['data-astro-reload'] ? '' : undefined}
>
  <slot />
</a>