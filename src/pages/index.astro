---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import Skills from '@/components/react/Skills'
import { ErrorBoundary } from '@/components/react/ErrorBoundary'
import { buttonVariants } from '@/components/ui/button'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
import { getRecentPosts } from '@/lib/data-utils'
import { cn } from '@/lib/utils'
import { SOCIAL_LINKS, ICON_MAP, SITE } from '@/consts'
import type { SocialLink } from '@/types'

// Error handling for fetching recent posts
let latestPosts: Awaited<ReturnType<typeof getRecentPosts>> = []
try {
  latestPosts = await getRecentPosts(2)
} catch (error) {
  console.error('Error fetching recent posts:', error)
}

// Person Schema for homepage SEO
const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": SITE.title,
  "url": SITE.href,
  "description": SITE.description
}

// Organization Schema
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": SITE.title,
  "url": SITE.href,
  "description": SITE.description
}

// Website Schema
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": SITE.title,
  "url": SITE.href,
  "description": SITE.description,
  "potentialAction": {
    "@type": "SearchAction",
    "target": {
      "@type": "EntryPoint",
      "urlTemplate": `${SITE.href}/blog?q={search_term_string}`
    },
    "query-input": "required name=search_term_string"
  }
}

// Experience Timeline - Customize with your own experience
type ExperienceItem = {
  role: string
  company: string
  period: string
  current?: boolean
  icon: string
  key: string
}

// Customize your experience here
const experience: ExperienceItem[] = [
  {
    role: 'Your Current Role',
    company: 'Current Company',
    period: '2022 - Present',
    current: true,
    icon: 'lucide:briefcase',
    key: 'Brief description of your current role and key achievements • Add more details about your responsibilities and accomplishments'
  },
  {
    role: 'Previous Role',
    company: 'Previous Company',
    period: '2020 - 2022',
    icon: 'lucide:server',
    key: 'Description of your previous role and achievements • Highlight key projects or responsibilities you had in this position'
  },
  {
    role: 'Earlier Role',
    company: 'Earlier Company',
    period: '2018 - 2020',
    icon: 'lucide:code',
    key: 'Description of your earlier role and achievements • Show your career progression and growth over time'
  },
]
---
<Layout class="max-w-3xl" transition:persist="home-layout">
  <PageHead slot="head" title={SITE.title} fullTitle={true} />
  
  <!-- Schema Markup for SEO -->
  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
  
  <!-- Hero Section -->
  <section class="relative overflow-hidden rounded-xl border" style="min-height: clamp(280px, 40vh, 400px);">
    <!-- Gradient Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-background to-background" aria-hidden="true"></div>
    
    <!-- Content -->
    <div class="relative z-10 p-8 md:p-12">
      <div class="flex flex-col gap-8">
        <!-- Main Content -->
        <div class="flex-1 min-w-0 space-y-6">
          <!-- Heading -->
          <div class="space-y-4" style="min-height: clamp(120px, 20vh, 180px);">
            <h1 class="text-4xl sm:text-5xl md:text-6xl leading-[1.1] font-bold tracking-tight" style="font-variation-settings: 'wght' 700;">
              Welcome to<br class="hidden sm:block" />
              <span class="text-primary">{SITE.title}</span>
            </h1>
            <p class="text-muted-foreground mt-4 leading-relaxed text-base md:text-lg max-w-xl" style="min-height: 3rem;">
              {SITE.description}
            </p>
          </div>
          
          <!-- CTA Buttons -->
          <div class="flex flex-wrap items-center gap-3 pt-2">
            <Link href="/blog" class={buttonVariants({ variant: 'default', size: 'lg' })}>
              Read the blog
              <Icon name="lucide:arrow-right" class="size-4" />
            </Link>
            <Link href="/about" class={buttonVariants({ variant: 'outline', size: 'lg' })}>
              About me
            </Link>
          </div>
          
          <!-- Social Icons -->
          <div class="pt-2">
            <ul class="flex flex-wrap items-center gap-2" role="list">
              {SOCIAL_LINKS.map(({ href, label }: SocialLink) => (
                <li>
                  <Link
                    href={href}
                    aria-label={label}
                    title={label}
                    class={buttonVariants({ variant: 'outline', size: 'icon' }) + ' backdrop-blur-sm bg-background/80'}
                    external={href.startsWith('http') || href.startsWith('mailto:')}
                  >
                    <Icon
                      name={
                        ICON_MAP[label as keyof typeof ICON_MAP] ||
                        'lucide:message-circle-question'
                      }
                      class="size-4"
                    />
                  </Link>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Experience Timeline -->
  <section class="mt-8">
    <div class="mb-6">
      <h2 class="text-2xl font-semibold mb-2">Experience</h2>
      <p class="text-sm text-muted-foreground">
        Professional journey and achievements
      </p>
    </div>
    
    <div class="space-y-6">
      {experience.map((exp, index) => (
        <div class="relative">
          {index < experience.length - 1 && (
            <div class="absolute left-[11px] top-8 bottom-0 w-px bg-border" aria-hidden="true"></div>
          )}
          
          <div class="flex gap-4">
            <div class={`relative flex-shrink-0 w-6 h-6 rounded-full flex items-center justify-center ring-4 ring-background z-10 ${
              exp.current ? "bg-primary text-primary-foreground shadow-lg shadow-primary/20" : "bg-muted text-muted-foreground"
            }`}>
              <Icon name={exp.icon} class="size-3.5" />
            </div>
            
            <div class="flex-1 pb-2 min-w-0">
              <div class="mb-1">
                <h3 class="font-semibold text-lg leading-tight">{exp.role}</h3>
                <p class="text-sm text-muted-foreground">
                  {exp.company} · {exp.period}
                </p>
              </div>
              <p class="text-sm text-muted-foreground/90 leading-relaxed mt-2">
                {exp.key}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Skills & Technologies (Optional) -->
  <section class="mt-12">
    <div class="mb-6">
      <h2 class="text-2xl font-semibold mb-2">Skills & Technologies</h2>
      <p class="text-sm text-muted-foreground">
        Technologies and tools I work with
      </p>
    </div>
    <ErrorBoundary client:load transition:persist="skills-error-boundary">
      <Skills client:load transition:persist="skills-section" />
    </ErrorBoundary>
  </section>

  <!-- Latest from the blog -->
  {latestPosts && latestPosts.length > 0 && (
    <section class="mt-12">
      <div class="mb-6 flex items-center justify-between">
        <div>
          <h2 class="text-2xl font-semibold mb-2">Latest from the blog</h2>
          <p class="text-sm text-muted-foreground">Recent insights and articles</p>
        </div>
        <Link 
          href="/blog" 
          class={buttonVariants({ variant: 'ghost' }) + ' hidden sm:flex items-center gap-1.5'}
        >
          View all
          <Icon name="lucide:arrow-right" class="size-4" />
        </Link>
      </div>
      
      <div class="space-y-2">
        {latestPosts.map((post) => (
          <article>
            <BlogCard entry={post} />
          </article>
        ))}
      </div>
      
      <article class="mt-2 sm:hidden">
        <Link
          href="/blog"
          aria-label="View all blog posts"
          class="group block py-3 px-2 rounded-md border border-border/50 bg-muted/20 hover:bg-muted/40 hover:border-primary/30 transition-all duration-200"
        >
          <div class="flex items-center gap-3">
            <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-primary/10 dark:bg-primary/20 flex items-center justify-center group-hover:bg-primary/20 dark:group-hover:bg-primary/30 transition-colors" aria-hidden="true">
              <Icon name="lucide:library" class="size-5 text-primary" />
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2">
                <span class="text-sm font-semibold text-foreground group-hover:text-primary transition-colors">
                  View all posts
                </span>
                <Icon name="lucide:arrow-right" class="size-4 text-primary/70 group-hover:text-primary group-hover:translate-x-0.5 transition-all shrink-0" aria-hidden="true" />
              </div>
              <p class="text-xs text-muted-foreground mt-0.5">
                Explore all articles and tutorials
              </p>
            </div>
          </div>
        </Link>
      </article>
    </section>
  )}

  <!-- CTA Section -->
  <section class="mt-12 sm:mt-24">
    <div class="max-w-2xl mx-auto">
      <div class="mb-12 relative">
        <div class="absolute inset-0 flex items-center" aria-hidden="true">
          <div class="w-full border-t border-border"></div>
        </div>
        <div class="relative flex justify-center">
          <div class="flex items-center gap-2.5 px-4 py-2 rounded-full bg-background border border-border shadow-sm">
            <span class="relative flex h-1.5 w-1.5">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
              <span class="relative inline-flex rounded-full h-1.5 w-1.5 bg-primary"></span>
            </span>
            <span class="text-xs font-medium text-muted-foreground uppercase tracking-wider">Available</span>
          </div>
        </div>
      </div>
      
      <div class="text-center space-y-6">
        <div class="space-y-2">
          <h2 class="text-4xl sm:text-5xl md:text-6xl font-semibold tracking-tight text-foreground leading-tight">
            Let's connect
          </h2>
        </div>
        <p class="text-lg sm:text-xl text-muted-foreground leading-relaxed max-w-xl mx-auto">
          Have questions or want to collaborate? Feel free to reach out!
        </p>
        <div class="pt-4">
          {SOCIAL_LINKS.find(link => link.label === 'Email') && (
            <Link 
              href={SOCIAL_LINKS.find(link => link.label === 'Email')!.href} 
              class="group inline-flex items-center gap-2.5 px-7 py-3.5 rounded-lg bg-foreground text-background text-base font-medium hover:bg-foreground/90 transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
            >
              <Icon name="lucide:mail" class="size-4" />
              <span>Get in touch</span>
              <Icon name="lucide:arrow-right" class="size-4 transition-transform group-hover:translate-x-1" />
            </Link>
          )}
        </div>
      </div>
    </div>
  </section>
</Layout>
